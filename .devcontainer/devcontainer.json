// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Odoo13-CNF",
    "dockerComposeFile": "./devcontainer/docker-compose.yml",
    "service": "devcontainer",

//	"build": { "dockerfile": "Dockerfile" },

    "workspaceFolder": "/workspace",

	// Features to add to the dev container. More info: https://containers.dev/features.
    "features": {
		"ghcr.io/devcontainers/features/python:1": {
			"installTools": true,
			"version": "3.8"
		}
	},

	"mounts": [
		// Enable container access to SSH and AWS credentials in the container environment.
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/root/.ssh,readonly,type=bind",
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.aws,target=/root/.aws,readonly,type=bind",
		// Store ssh keys temporarily in the container using a tmpfs volume.
		"type=tmpfs,destination=/home/vscode/.ssh",
		"type=tmpfs,destination=/home/vscode/.aws",
//		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,readonly,type=bind",
//		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.aws,target=/home/vscode/.aws,readonly,type=bind",
		// Persist bash history between rebuilds.
		"source=odoo-bashhistory,target=/commandhistory,type=volume",
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	 "forwardPorts": [
		 8069,
		 8072,
		 80,
		 5432,
	 ],

	// Use 'postCreateCommand' to run commands after the container is created.
	"onCreateCommand": "bash /workspace/.devcontainer/pre-setup.sh",
	"postAttachCommand": "source /workspace/venv/bin/activate",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "vscode",
	"containerUser": "vscode",
}